<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h1 class="text-center mb-5">Contactez-nous</h1>
        
        <div class="row mb-5">
          <div class="col-md-4 text-center">
            <i class="fas fa-phone fa-2x text-primary mb-3"></i>
            <h5>Téléphone</h5>
            <p>+261 32 51 932 31</p>
          </div>
          <div class="col-md-4 text-center">
            <i class="fas fa-envelope fa-2x text-primary mb-3"></i>
            <h5>Email</h5>
            <p>contact@iamarketings.fr</p>
          </div>
          <div class="col-md-4 text-center">
            <i class="fas fa-map-marker-alt fa-2x text-primary mb-3"></i>
            <h5>Adresse</h5>
            <p>Antananarivo 101<br>Madagascar</p>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-body">
            <form id="contactForm">
              <div class="mb-3">
                <label class="form-label">Nom complet</label>
                <input type="text" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Sujet</label>
                <input type="text" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Message</label>
                <textarea class="form-control" rows="5" required></textarea>
              </div>
              <button type="submit" class="btn btn-primary w-100">Envoyer le message</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    $(document).ready(function() {
      $('#contactForm').on('submit', function(e) {
        e.preventDefault();
        // Animation de soumission
        $(this).find('button[type="submit"]')
          .html('<i class="fas fa-spinner fa-spin"></i> Envoi...')
          .prop('disabled', true);
        
        // Simuler l'envoi
        setTimeout(() => {
          alert('Message envoyé avec succès!');
          this.reset();
          $(this).find('button[type="submit"]')
            .html('Envoyer le message')
            .prop('disabled', false);
        }, 1500);
      });
    });
  </script>
</body>
</html>