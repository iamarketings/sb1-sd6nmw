<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include('../partials/head') %>
  <title>Administration - Gestion du stockage</title>
</head>
<body class="bg-gray-100">
  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Gestion du stockage</h1>
      <a href="/admin" class="btn btn-outline-primary">Retour au dashboard</a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Utilisateur</th>
                <th>Espace utilis√©</th>
                <th>Pourcentage</th>
                <th>Progression</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= formatSize(user.storage) %></td>
                  <td><%= ((user.storage / (30 * 1024 * 1024 * 1024)) * 100).toFixed(2) %>%</td>
                  <td>
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" 
                           style="width: <%= (user.storage / (30 * 1024 * 1024 * 1024)) * 100 %>%"
                           aria-valuenow="<%= (user.storage / (30 * 1024 * 1024 * 1024)) * 100 %>"
                           aria-valuemin="0" aria-valuemax="100">
                      </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>